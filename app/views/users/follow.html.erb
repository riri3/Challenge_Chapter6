<table class = 'table'>
 <h1>Follow Users</h1>
  <thead>
   <tr>
     <th>images</th>
     <th>names</th>
   <tr>
     <% @following_users.each do |following_user| %>

    <td><%= attachment_image_tag(following_user, :profile_image, format:'jpeg', size: "50x50", fallback: "no-image-icon.jpg") %></td>
    <td><%= following_user.name %></td>
    <td><%= link_to 'フォロー外す', user_relationships_path(following_user.id), method: :delete %></td>
  </tr>
 <% end %>
 </thead>
</table>