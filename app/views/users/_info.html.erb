<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, format:'jpeg', size: "100x100", fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>



  <tr>
    <th>follows <%= link_to user.follower.count, user_follow_path %></th>
  </tr>
  <tr>
    <th>followers <%= link_to user.followed.count, user_follower_path %></th>
  </tr>
</table>

<div class='row'>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :DELETE, class: "btn btn-info" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: 'btn btn-success' %>
    <% end %>
  <% end %>

<br>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>